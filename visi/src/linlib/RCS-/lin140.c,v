#include <stdio.h>
#include "line.h"

/*
**      ץנעבקלומיו עוציםבםי העבךקועב פועםימבלב
**/

#include <sgtty.h>

#ifdef  RT11
static  int     *jsw = 044;     /* JOB STATUS WORD */
#endif

#ifdef  DEMOS2
#include <signal.h>
static struct sgttya old, new;          /*   */
#endif

int osgflg = 0;         /* זלבחי העבךקועב (old.sg_flags) */

/*------------------------------*/
/* עובכדיס מב ףיחמבל נעועשקבמיס */
/*------------------------------*/
#ifdef RT11
/* כ ףןצבלומיא, הלס RT-11 נןכב מו עבגןפבופ תבנעןף .SCCA
 * פבכ, כבכ פןחן טןפולןףר גש...
 */
#endif

#ifdef DEMOS2
static onintr()
{
	signal(SIGINT,SIG_IGN); /* ןףפבלרמשו מןפש ןנומב יחמןעו... */
	v_off(); exit(0);
}
#endif

/*------------------------------*/
/* פולופבךנמשך עוצים - ףפבמהבעפ */
/*------------------------------*/
static v_off()
{
#ifdef  DEMOS2
	static   int      (*fsig)();
#endif
#ifdef  RT11
	FILE *freopen() ;
#endif

	fflush(vttout);         /* ףמב‏בלב תבכןמ‏יפר קשקןה */

#ifdef  RT11
	*jsw &= ~010100 ;                /* SPECIAL .TTINR MODE OFF */
	freopen("tt:", "w", vttout);     /* UNBUFERED I/O OFF */
#ifdef  decus
	vttout->_flag &= ~_IONBF ;       /* SINGLE CHAR OUTPUT OFF */
#endif
#endif

#ifdef  DEMOS2
	/* ףמספר עובכדיא מב CTRL-C */
	fsig = signal(SIGINT,SIG_IGN);
	if( fsig == &onintr ) {
		fsig = SIG_DFL;
	}
	signal( SIGINT, fsig );

	ioctl(vtti, TIOCSETB, &old);
#endif
}

/*----------------------------*/
/* ץףפבמןקכב כעבממןחן עוציםב */
/*----------------------------*/
static v_on()
{
#ifdef  RT11
	FILE *freopen() ;

	*jsw |= 010100 ;                /* SPECIAL .TTINR MODE          */
	freopen ( "tt:", "wu", vttout ) ;       /* UNBUFERED I/O        */
#ifdef  decus
	vttout->_flag |= _IONBF ;       /* SINGLE CHAR OUTPUT           */
#endif
#endif

#ifdef  DEMOS2
	static   int      (*fsig)();

	ioctl(vtti,TIOCGETA,&old);         /* גועום ףפבעשו עוציםש */
	new = old;
	osgflg = old.sg_flags;          /* וכףנןעפיעץום זלבחי העבךקועב */
/*      new.sg_flags = (old.sg_flags &
 *          ~(CRMOD|ECHO|XTABS|
 *          CYRILL|LCASE|UCASE)) | CBREAK ;
 */
	new.sg_flags = (old.sg_flags &
	    ~(ECHO|XTABS
/*                      |LCASE|UCASE          */
			)) | CBREAK ;
	if(old.sg_flags & LCASE)
		new.sg_flags &= ~UCASE;
	new.sg_width  = 0;
	new.sg_length = 0;
	/*      new.sg_quitc  = 0;      */
	/*      new.sg_startc = 0;      */
	/*      new.sg_stopc  = 0;      */
	new.sg_suspc  = 0;
	new.sg_dsuspc = 0;
	new.sg_rprntc = 0;
	/*      new.sg_flushc = 0;      */
	new.sg_werasc = 0;
	new.sg_lnextc = 0;
	new.sg_brkc   = 0;
	new.sg_eofc   = 0;

	/* עובכדיס מב CTRL-C */
	fsig = signal(SIGINT,SIG_IGN);
	if( fsig == SIG_DFL )   {
		fsig = &onintr;
		signal( SIGINT, fsig );
	}
	ioctl(vtti, TIOCSETB, &new);
#endif
}

#ifdef  DEMOS2
/*-----------------------------------------------------*/
/* נעןקועכב מב ןפףץפףפקיו ףיםקןלןק ק גץזועו כלבקיבפץעש */
/*-----------------------------------------------------*/
ttytst()
{
	static long num_r;

	ioctl(vtti, FIONREAD, &num_r);
	return( num_r == 0l );
}
#endif

/*--------------*/
/* קקןה ףיםקןלב */
/*--------------*/
/* ה  הוםןף   ,
 *      , 
 *   ,     קם,
 *    
 *    .
 *      P.S.
 *      נ      
 *       ,        -
 *      ת     .
 */

int     cyrflg = 0;     /*     */

static  int cyrkbd()
{
#ifdef DEMOS2
	if( (osgflg & LCASE) )
		return;
	if(cyrflg && ((osgflg & CYRILL) != 0))
		switch(osgflg & CSTYLE) {
		case CS_TYPE2 :
		case CS_TYPE0 :
			putc('N' & 037, vttout);  /*  SI (ctrl/n) */
			break;
		};
#endif
}

#ifdef  RT11
/* lin110.mac: יםיפבדיס תבנעןףב .TTINR RT-11 */
extern  int     ttinr();
#endif

static int kb_nwt = 0;  /* מ     -
			 *    
			 *  .
			 * נן ץםןל‏במיא - קקןה ןציהבופףס */

/* ק  ,     */
/*     ,   */
ttyinp()
{
	char         cc;
	register int c;

	next_j();       /* ןהימ עבת נועוה קקןהןם כבצהןחן ףיםקןלב */
	cyrkbd();
	fflush(vttout);

	if(kb_nwt) {
#ifdef  RT11
		while((c=ttinr()) == -1) {  /*     */
			next_j();       /*   */
			cyrkbd();
			fflush(vttout);
		}
#endif
#ifdef  DEMOS2
		while( ttytst() ) { /* נןכב ‏ועוהר נץףפבס */
			next_j();       /* נעןכעץפיפר בףימטעןמ‎ימץ */
			cyrkbd();
			fflush(vttout);
		}
		read(vtti, &cc, 1);
		c = cc;
#endif
		goto ret_c;     /*   */
	} else {
#ifdef  RT11
		while( (c=ttinr()) == -1);      /* while for SJ only */
#endif

#ifdef  DEMOS2
		read(vtti, &cc, 1);        /*   */
		c = cc;
		goto ret_c;
#endif
ret_c:
		c &= 0377;
		if(c > 0177)    cyrflg = 1;
		else            cyrflg = 0;
		return( c );
	}
}

/*------------------------------------------------*/
/* ץנעבקלומיו עוציםבםי פועםימבלרמןחן קקןהב-קשקןהב */
/*------------------------------------------------*/
io_set(flags)
register int flags;
{
	if(flags & IO_VIDEO)
				v_on();
	if(flags & IO_TTYPE)
				v_off();
	if(flags & IO_WAIT)
				kb_nwt = 0;
	if(flags & IO_NOWAIT)
				kb_nwt = 1;
}
@
