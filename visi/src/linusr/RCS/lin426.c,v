/* оформление в стиле К.Уейна Ретлиффа */

#include <stdio.h>
#include "line.h"

int cvt_hl(line, cod, mod, str)
/*
 * Провести горизонтальную линию,
 * знак задается при описании формы.
 *
 */
	LINE    *line;
	int       cod;
	char     *mod;
	char     *str;
	{
	register char *s;
	register int   i;

	if( *mod == 'w' ) {
		s = line->varl;
		for(i = line->size; i>0; i--)
			*str++ = *s;
		*str = '\0';
		}
	return( TRUE );
	}
