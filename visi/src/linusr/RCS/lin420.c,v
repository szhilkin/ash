#include <stdio.h>
#include "line.h"

/*---------------------------------------*/
/* ףפבמהבעפמןו ץנעבקלומיו נועוכלא‏בפולום */
/*---------------------------------------*/

cvt_a(line, cod, mod, str)
LINE    *line;
int       cod;
char     *mod;
char     *str;
{
	register        int     *indx;
	register        char    **p;
	register        int     i;

	indx = (int *)line->varl;
	p  = (char **)line->cvts;

	/* הלס מבהוצמןףפי נעי עבגןפו ף "םץףןעןם" */
	/* ףמב‏בלב מבניום קשקןה - פן נען‎ו */
	if( *mod == 'w' ) {
		for(i=0; p[i]!=0; i++) ;
		if( *indx >= i )
			*indx = 0;
		strcpy(str, p[*indx]);

	} else if( *mod == 'r' ) {
		switch ( cod ) {
		case 0:         bell();
				break;
		case ' ' :
		case '.' :
		case '>' :
			*indx += 1 ;
			if(p[*indx] == 0)
				*indx = 0;
			break;

		case 'DE':
		case ',' :
		case '<' :
			if ( *indx == 0 ) {
				while(p[*indx +1] != 0) {
					*indx += 1;
				}
			}
			else *indx -= 1;
			break ;
		default :
			break ;
		}
	}
	return( TRUE ) ;        /* ןיגןכ גשפר מו הןלצמן גש... */
}
@


