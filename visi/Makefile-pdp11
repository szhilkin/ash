#
# утрамбовать файлы в архив
#

TARF    = tar csf -
MAKEFILE = Makefile
DTAPE   = \
	_base.tar    \
	_doc.tar     \
	_usr.tar     \
	_src.tar     \
	_rt11.tar    \
	_unused.tar  \
	_pp.tar

HEADER  = \
	Makefile        \
	READ_ME         \
	__LIST

LIST    = _base _src _doc _usr

all:    $(HEADER) $(LIST)

clean:
	-rmdir  $(LIST)
	for i in $(LIST); do rm -f $$i.tar; done

.DEFAULT:
	make -f $(MAKEFILE) TARNAME=$@ tararchive

tararchive:
	-mkdir $(TARNAME)
	tar cvbf 1 $(TARNAME).tar `grep $(TARNAME) __LIST`

###
